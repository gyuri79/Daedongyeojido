<script>
  $(function () { //문서 로딩이 끝난 후 jQuery 소스 실행
    var trigger = $('#trigger'); //#trigger 요소를 가져와 trigger 변수로 지정
    var menu = $('nav ul'); // nav ul 요소를 가져와   menu 별수로 지정
    $(trigger).on('click', function (e) { //trigger에 click 이벤트가 발생하면 { } 안의 내용 실행
      e.preventDefault(); // trigger의 기본 기능(링크 기능) 취소
      menu.slideToggle(); //menu를 슬라이드 다운/업 시킴
      $(window).resize(function () { // 창의 크기가 바뀌면(resize 이벤트 발생) {} 안의 내용 실행
        var w = $(window).width(); // 창의 너빗값을 가져와 w 변수로 지정
        if (w > 320 && menu.is(':hidden')) { //화면 너비가 320px보다 크고 menu가 화면에서 사라지면 {} 안의 내용 실행
          menu.removeAttr('style'); // menu에서 style 속성 제거
        }
      })
    });
  });
</script>
